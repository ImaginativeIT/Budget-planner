<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:weightSum="3.5"
    android:orientation="vertical">
    <LinearLayout
        android:weightSum="3"
        android:layout_weight="2.5"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="horizontal">
        <RelativeLayout
            android:layout_weight="1"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="horizontal">
            <TextView
                android:paddingTop="10dp"
                android:id="@+id/income_progressbar_label"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerHorizontal="true"
                android:textAlignment="center"
                android:text="Income"
                android:textStyle="bold"
                android:textColor="@color/pureBlack"/>

            <TextView
                android:paddingTop="30dp"
                android:id="@+id/income_progress"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerInParent="true"
                android:textSize="20sp"
                android:textAlignment="center"
                android:text="80%"
                android:textStyle="bold"
                android:textColor="@color/pureBlack"/>

            <ProgressBar
                android:paddingTop="30dp"
                android:id="@+id/incomeProgressbar"
                style="?android:attr/progressBarStyleHorizontal"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:indeterminate="false"
                android:max="100"
                android:progress="80"
                android:layout_centerInParent="true"
                android:progressDrawable="@drawable/circular_income"
                android:secondaryProgress="100"
                />

        </RelativeLayout>

        <RelativeLayout
            android:layout_weight="1"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="horizontal">
            <TextView
                android:layout_alignTop="@id/expenseProgressbar"
                android:paddingTop="10dp"
                android:id="@+id/expense_progressbar_label"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerHorizontal="true"
                android:textAlignment="center"
                android:text="Expense"
                android:textStyle="bold"
                android:textColor="@color/pureBlack"/>

            <TextView
                android:id="@+id/expense_progress"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerInParent="true"
                android:textSize="20sp"
                android:textAlignment="center"
                android:text="70%"
                android:paddingTop="30dp"
                android:textStyle="bold"
                android:textColor="@color/pureBlack"/>
            <ProgressBar
                android:id="@+id/expenseProgressbar"
                style="?android:attr/progressBarStyleHorizontal"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:indeterminate="false"
                android:max="100"
                android:progress="70"
                android:paddingTop="30dp"
                android:layout_centerInParent="true"
                android:progressDrawable="@drawable/circular_expense"
                android:secondaryProgress="100"
                />


        </RelativeLayout>
        <RelativeLayout
            android:layout_weight="1"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="horizontal">

            <TextView
                android:paddingTop="10dp"
                android:id="@+id/saving_progressbar_label"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerHorizontal="true"
                android:textAlignment="center"
                android:text="Saving"
                android:textStyle="bold"
                android:textColor="@color/pureBlack"/>

            <TextView
                android:paddingTop="30dp"
                android:id="@+id/saving_progress"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerInParent="true"
                android:textSize="20sp"
                android:textAlignment="center"
                android:text="50%"
                android:textStyle="bold"
                android:textColor="@color/pureBlack"/>

            <ProgressBar
                android:paddingTop="30dp"
                android:id="@+id/savingProgressbar"
                style="?android:attr/progressBarStyleHorizontal"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:indeterminate="false"
                android:max="100"
                android:progress="50"
                android:layout_centerInParent="true"
                android:progressDrawable="@drawable/circular_saving"
                android:secondaryProgress="100"
                />

        </RelativeLayout>


    </LinearLayout>

    <LinearLayout
        android:weightSum="15"
        android:layout_weight="1"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_margin="10dp"
        android:orientation="vertical">

        <LinearLayout
            android:layout_weight="5"
            android:id="@+id/income_container"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">

            <LinearLayout
                android:background="@color/income_light"
                android:weightSum="8"
                android:gravity="center"
                android:layout_width="match_parent"
                android:orientation="horizontal"
                android:layout_height="wrap_content">
                <TextView
                    android:layout_weight="4"
                    android:id="@+id/income_topic_label"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:paddingLeft="5dp"
                    android:textAlignment="viewStart"
                    android:text="Current Income"
                    android:textStyle="bold"
                    android:textColor="@color/pureBlack"/>
                <TextView
                    android:layout_weight="1"
                    android:id="@+id/income_total_label"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"

                    android:textAlignment="center"
                    android:text="Total : "
                    android:textStyle="bold"
                    android:textColor="@color/pureBlack"/>
                <TextView
                    android:layout_weight="1"
                    android:id="@+id/income_total_amount"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"

                    android:textAlignment="center"
                    android:text="50 000"
                    android:textStyle="bold"
                    android:textColor="@color/pureBlack"/>
                <ImageButton
                    android:layout_margin="3dp"
                    android:layout_weight="1"
                    android:id="@+id/income_addNew"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:theme="@style/drop_add_image_button"
                    android:src="@drawable/ic_add_black_24dp"
                    android:background="@drawable/image_button_controller"
                    android:contentDescription="TODO" />

                <ImageButton
                    android:layout_margin="3dp"
                    android:layout_weight="1"
                    android:id="@+id/income_dropDown"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:theme="@style/drop_add_image_button"
                    android:background="@drawable/image_button_controller"
                    android:src="@drawable/ic_arrow_drop_down_black_24dp"/>

            </LinearLayout>
            <ScrollView
                android:id="@+id/income_scroll_container"
                android:layout_width="match_parent"
                android:fillViewport="true"
                android:layout_height="match_parent">
                <LinearLayout
                    android:id="@+id/income_item_container"
                    android:orientation="vertical"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent">


                </LinearLayout>
            </ScrollView>



        </LinearLayout>

        <LinearLayout
            android:layout_weight="5"
            android:id="@+id/expense_container"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">


            <LinearLayout
                android:layout_marginTop="15dp"
                android:background="@color/expense_light"
                android:weightSum="8"
                android:gravity="center"
                android:layout_width="match_parent"
                android:orientation="horizontal"
                android:layout_height="wrap_content">
                <TextView
                    android:layout_weight="4"
                    android:id="@+id/expense_topic_label"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:paddingLeft="5dp"
                    android:textAlignment="viewStart"
                    android:text="Current Expense"
                    android:textStyle="bold"
                    android:textColor="@color/pureBlack"/>
                <TextView
                    android:layout_weight="1"
                    android:id="@+id/expense_total_label"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"

                    android:textAlignment="center"
                    android:text="Total : "
                    android:textStyle="bold"
                    android:textColor="@color/pureBlack"/>
                <TextView
                    android:layout_weight="1"
                    android:id="@+id/expense_total_amount"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"

                    android:textAlignment="center"
                    android:text="50 000"
                    android:textStyle="bold"
                    android:textColor="@color/pureBlack"/>
                <ImageButton
                    android:layout_margin="3dp"
                    android:layout_weight="1"
                    android:id="@+id/expense_addNew"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:theme="@style/drop_add_image_button"
                    android:src="@drawable/ic_add_black_24dp"
                    android:background="@drawable/image_button_controller"/>

                <ImageButton
                    android:layout_margin="3dp"
                    android:layout_weight="1"
                    android:id="@+id/expense_dropDown"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:theme="@style/drop_add_image_button"
                    android:src="@drawable/ic_arrow_drop_down_black_24dp"
                    android:background="@drawable/image_button_controller"/>

            </LinearLayout>

            <ScrollView
                android:id="@+id/expense_scroll_container"
                android:layout_width="match_parent"
                android:fillViewport="true"
                android:layout_height="match_parent">
                <LinearLayout
                    android:id="@+id/expense_item_container"
                    android:orientation="vertical"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent">


                </LinearLayout>
            </ScrollView>


        </LinearLayout>

        <LinearLayout
            android:layout_weight="5"
            android:id="@+id/saving_container"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">

            <LinearLayout
                android:layout_marginTop="15dp"
                android:background="@color/saving_light"
                android:weightSum="8"
                android:gravity="center"
                android:layout_width="match_parent"
                android:orientation="horizontal"
                android:layout_height="wrap_content">
                <TextView
                    android:layout_weight="4"
                    android:id="@+id/saving_topic_label"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textAlignment="viewStart"
                    android:paddingLeft="5dp"
                    android:text="Current Saving"
                    android:textStyle="bold"
                    android:textColor="@color/pureBlack"/>
                <TextView
                    android:layout_weight="1"
                    android:id="@+id/saving_total_label"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:paddingLeft="5dp"
                    android:textAlignment="center"
                    android:text="Total : "
                    android:textStyle="bold"
                    android:textColor="@color/pureBlack"/>
                <TextView
                    android:layout_weight="1"
                    android:id="@+id/saving_total_amount"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"

                    android:textAlignment="center"
                    android:text="50 000"
                    android:textStyle="bold"
                    android:textColor="@color/pureBlack"/>
                <ImageButton
                    android:layout_margin="3dp"
                    android:layout_weight="1"
                    android:id="@+id/saving_addNew"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:theme="@style/drop_add_image_button"
                    android:src="@drawable/ic_add_black_24dp"
                    android:background="@drawable/image_button_controller"/>

                <ImageButton
                    android:layout_margin="3dp"
                    android:layout_weight="1"
                    android:id="@+id/saving_dropDown"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:theme="@style/drop_add_image_button"
                    android:src="@drawable/ic_arrow_drop_down_black_24dp"
                    android:background="@drawable/image_button_controller"/>

            </LinearLayout>

            <ScrollView
                android:id="@+id/saving_scroll_container"
                android:layout_width="match_parent"
                android:fillViewport="true"
                android:layout_height="match_parent">
                <LinearLayout
                    android:id="@+id/saving_item_container"
                    android:orientation="vertical"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent">


                </LinearLayout>
            </ScrollView>




        </LinearLayout>


    </LinearLayout>

</LinearLayout>