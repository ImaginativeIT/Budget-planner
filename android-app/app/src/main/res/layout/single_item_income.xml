<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:orientation="horizontal"
    android:weightSum="7"
    android:minHeight="50dp"
    android:background="@drawable/single_list_item_bg"
    android:layout_height="wrap_content">
    <LinearLayout
        android:layout_weight="6"
        android:layout_margin="10dp"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:gravity="center"
        android:orientation="vertical">
        <ImageButton
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:maxHeight="30dp"
            android:minHeight="20dp"
            android:maxWidth="30dp"
            android:minWidth="20dp"
            android:background="#ffffff"
            android:src="@drawable/ic_edit_black_24dp"/>

    </LinearLayout>

    <LinearLayout
        android:layout_weight="1"
        android:weightSum="2"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical">

        <LinearLayout
            android:weightSum="8"
            android:layout_weight="1"
            android:gravity="center"
            android:layout_marginLeft="5dp"
            android:layout_marginRight="25dp"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="horizontal">
            <TextView
                android:layout_weight="4"
                android:id="@+id/topic_label"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="5dp"
                android:textAlignment="viewStart"
                android:text="Current Income"
                android:textStyle="bold"
                android:textColor="@color/pureBlack"/>

            <View
                android:id="@+id/color_view"
                android:layout_width="10dp"
                android:layout_height="10dp"
                android:background="@color/income"/>

            <TextView
                android:textAlignment="center"
                android:layout_weight="1"
                android:id="@+id/currency_label"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Rs"
                android:textStyle="bold"
                android:textSize="10dp"
                android:textColor="@color/pureBlack"/>

            <TextView
                android:layout_weight="2"
                android:id="@+id/amount_label"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="20000.00"
                android:textStyle="bold"
                android:textSize="10dp"
                android:textColor="@color/pureBlack"/>

        </LinearLayout>
        <LinearLayout
            android:layout_weight="1"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_marginRight="30dp"
            android:gravity="center"
            android:orientation="vertical">

            <ProgressBar
                android:layout_width="match_parent"
                style="@style/Widget.AppCompat.ProgressBar.Horizontal"
                android:progress="80"
                android:progressTint="@color/income"
                android:secondaryProgress="100"
                android:secondaryProgressTint="@color/income"
                android:layout_height="match_parent"/>

        </LinearLayout>

    </LinearLayout>

</LinearLayout>