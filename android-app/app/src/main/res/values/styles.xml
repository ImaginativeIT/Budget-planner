<resources>

    <!-- Base application theme. -->
    <style name="AppTheme" parent="Theme.AppCompat.Light.DarkActionBar">
        <!-- Customize your theme here. -->
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
        <item name="colorAccent">@color/colorAccent</item>
    </style>

    <style name="AppTheme.NoActionBar">
        <item name="windowActionBar">false</item>
        <item name="windowNoTitle">true</item>
        <item name="android:statusBarColor">@android:color/transparent</item>
    </style>

    <style name="drop_add_image_button" parent="android:Widget.ImageButton">
        <item name="android:minHeight">15dp</item>
        <item name="android:maxHeight">20dp</item>
        <item name="android:minWidth">15dp</item>
        <item name="android:maxWidth">20dp</item>
    </style>

    <style name="create_plan_edit_text" parent="android:Widget.EditText">
        <item name="android:minHeight">50dp</item>
        <item name="android:layout_margin">5dp</item>
        <item name="android:textAlignment">center</item>
    </style>

    <style name="stepper_text_view" parent="android:Widget.TextView">
        <item name="android:gravity">center</item>
        <item name="android:textColor">@color/pure</item>
        <item name="android:minHeight">35dp</item>
        <item name="android:maxHeight">50dp</item>
        <item name="android:minWidth">35dp</item>
        <item name="android:maxWidth">50dp</item>
        <item name="android:textSize">25sp</item>
    </style>

    <style name="normal_button" parent="android:Widget.Button">
        <item name="android:textColor">@color/pure</item>
    </style>

</resources>
